<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:minimalBleApp="clr-namespace:MinimalBleApp"
             xmlns:ble="clr-namespace:Plugin.BLE.Abstractions.Contracts;assembly=Plugin.BLE"
             x:Class="MinimalBleApp.MainPage"
             x:DataType="minimalBleApp:MainViewModel">

    <Grid Padding="30,0" RowSpacing="20" RowDefinitions="8*,2*">
        <ListView
            Grid.Row="0"
            ItemsSource="{Binding DiscoveredDevices}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="ble:IDevice">
                    <ViewCell>
                        <Label Text="{Binding Name}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="1" HorizontalOptions="Fill" Command="{Binding ScanCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button" Binding="{Binding IsScanning}" Value="False">
                    <Setter Property="Text" Value="Start Scan" />
                </DataTrigger>
                <DataTrigger TargetType="Button" Binding="{Binding IsScanning}" Value="True">
                    <Setter Property="Text" Value="Stop Scan" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</ContentPage>
